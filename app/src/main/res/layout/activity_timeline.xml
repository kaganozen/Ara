<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="example.kagan.ara.Timeline">

    <ListView
        android:layout_width="385dp"
        android:layout_height="450dp"
        android:id="@+id/lv_timeline"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_writemessage"
        android:hint="Write something :)"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/btn_send"
        android:layout_alignBottom="@+id/txt_writemessage"
        android:layout_toRightOf="@+id/txt_writemessage"
        android:layout_toEndOf="@+id/txt_writemessage"
        android:layout_below="@+id/lv_timeline"
        android:onClick="sendMessage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_namepush"
        android:layout_below="@+id/lv_timeline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_idpush"
        android:layout_alignTop="@+id/txt_namepush"
        android:layout_toRightOf="@+id/txt_namepush"
        android:layout_toEndOf="@+id/txt_namepush" />
</RelativeLayout>
